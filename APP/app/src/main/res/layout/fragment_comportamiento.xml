<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/fondoVentanas">

    <TextView
        android:id="@+id/titulo_comportamiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Categorias"
        android:textColor="@android:color/black"
        android:textSize="24sp" />


    <Spinner
        android:id="@+id/spinner_comportamiento"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/titulo_comportamiento"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:background="#b1a090"
        android:popupBackground="#d1cac5"/>

    <Button
        android:layout_below="@+id/spinner_comportamiento"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circular_button"
        android:drawableTop="@drawable/ic_google_play2"
        android:paddingTop="7dp"
        android:paddingLeft="10dp"
        android:textColor="#fff" />

</RelativeLayout>